generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  recipe   Recipe[]
}

model Recipe {
  id          Int      @id @default(autoincrement())
  name        String
  imageURL    String
  ingredients String
  step        String[]
  user        User?    @relation(fields: [userId], references: [id])
  userId      Int
  category    String
}

enum Category {
  WESTERN
  ASIAN
  INDONESIAN
  SWEETS
  VEGETARIAN
}
